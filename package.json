{
  "name": "typescript-express-reactjs",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server:dev": "ts-node-dev ./index.ts",
    "server": "tsc && node ./.dist/index.js",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.17.3",
    "joi": "^17.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "concurrently": "^3.6.1",
    "jest": "^27.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
